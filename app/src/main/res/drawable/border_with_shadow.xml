<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#55000000" /> <!-- Semi-transparent black shadow -->
            <corners android:radius="8dp" />  <!-- Corner radius to match border radius -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" /> <!-- Padding to simulate shadow spread -->
        </shape>
    </item>

    <!-- Border layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/secondary" /> <!-- Background color, optional -->
            <corners android:radius="8dp" />  <!-- Corner radius -->
            <stroke
                android:color="@color/DARKGREEN"
            android:width="2dp" />
        </shape>
    </item>
</layer-list>
