<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main Bubble -->
    <item>
        <shape>
            <solid android:color="@color/DARKGREEN" />
            <corners android:radius="15dp" />
            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="20dp"
                android:bottom="20dp" />
        </shape>
    </item>

    <!-- Tail for Left-Aligned Bubble -->
    <item
        android:gravity="start|bottom">
        <shape>
            <path
                android:fillColor="@color/DARKGREEN"
                android:pathData="M10,0 L0,10 L0,0 Z" />
        </shape>
    </item>
</layer-list>
